# Stellara 项目环境变量配置
# 复制此文件为 .env.local 并填入真实值

# IPFS 配置 (Pinata)
NEXT_PUBLIC_PINATA_API_KEY=your_pinata_api_key_here
NEXT_PUBLIC_PINATA_SECRET_KEY=your_pinata_secret_key_here

# 智能合约地址 (部署后更新)
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_MARKETPLACE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# 网络配置
NEXT_PUBLIC_DEFAULT_NETWORK=sepolia
NEXT_PUBLIC_RPC_URL=https://sepolia.infura.io/v3/your_project_id

# 区块链浏览器
NEXT_PUBLIC_EXPLORER_URL=https://sepolia.etherscan.io

# 应用配置
NEXT_PUBLIC_APP_NAME=Stellara
NEXT_PUBLIC_APP_DESCRIPTION=去中心化的虚拟服装 NFT 交易平台
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 开发模式
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=true
